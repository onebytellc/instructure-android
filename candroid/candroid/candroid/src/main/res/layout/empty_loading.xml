<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canvasBackgroundLight">

    <include layout="@layout/loading_screen" android:id="@+id/loading"/>

    <TextView
        style="@style/TextStyle.Primary.SingleLine"
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progress_indicator"
        android:layout_centerHorizontal="true"
        android:text="@string/loading"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/noItems"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/noItemsToDisplayShort"
        style="@style/TextStyle.Primary"
        android:visibility="gone"/>

</RelativeLayout>