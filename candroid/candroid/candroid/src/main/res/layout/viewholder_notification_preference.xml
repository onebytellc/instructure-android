<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:listPreferredItemHeight">

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/card_header_checkbox_margins"
        android:layout_marginRight="@dimen/card_header_checkbox_margins" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginLeft="@dimen/card_header_margins"
        android:layout_marginStart="@dimen/card_header_margins"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        style="@style/TextStyle.Primary"/>

</FrameLayout>